{
    "name"       : "gwa/zero-library",
    "type"       : "library",
    "description": "Php Library for zero template.",
    "keywords"   : ["roots", "wordpress", "composer", "wp", "twig", "zero", "library", "zero-library"],
    "license"    : "MIT",
    "homepage"   : "https://github.com/gwa/zero-library",
    "support"    : {
        "issues": "https://github.com/gwa/zero-library/issues",
        "source": "https://github.com/gwa/zero-library"
    },
    "authors"    : [
        {
          "name"    : "Great White Ark",
          "homepage": "http://www.greatwhiteark.com"
        }
    ],
    "require": {
        "php"                                                  : ">=5.4.0",
        "jjgrainger/wp-custom-post-type-class"                 : "~1.3.1",
        "wpackagist-plugin/timber-library"                     : "0.21.8",
        "wpackagist-plugin/cmb2"                               : "~2.1.0",
        "gwa/mockery-wp-bridge"                                : "~1.1.0",
        "roots/soil"                                           : "3.4.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer"                                  : "~1.10",
        "phpunit/phpunit"                                      : "~4.8",
        "scrutinizer/ocular"                                   : "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Gwa\\Wordpress\\Template\\Zero\\Library\\"        : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gwa\\Wordpress\\Template\\Zero\\Library\\Tests\\" : "tests/"
        },
        "classmap": [
            "wp-content/plugins/timber-library",
            "wp-content/plugins/soil"
        ]
    },
    "repositories": [{
        "type": "composer",
        "url" : "http://wpackagist.org"
    }],
    "extra": {
        "installer-name": "zero-library",
        "branch-alias": {
            "dev-master"                                       : "3.0.0-dev"
        }
    },
    "scripts": {
        "test"                                                 : "phpunit",
        "check-cs"                                             : "php-cs-fixer.phar fix -v --dry-run",
        "fix-cs"                                               : "php-cs-fixer.phar fix"
    },
    "minimum-stability"                                        : "dev",
    "prefer-stable"                                            : true
}
